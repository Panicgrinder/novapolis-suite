{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Simulation API (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.api.sim:app",
        "--host",
        "127.0.0.1",
        "--port",
        "${env:AGENT_PORT}"
      ],
      "justMyCode": true,
      "env": {
        "AGENT_PORT": "8765"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Run API (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload"],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }
    ,
    {
      "name": "Run Simulation API (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "app.api.sim",
      "args": [],
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: all (-q)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: unit (-m unit)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-m", "unit"],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: api (-m api)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-m", "api"],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: streaming (-m streaming)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-m", "streaming"],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: api or streaming (-m 'api or streaming')",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-m", "api or streaming"],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: eval (-m eval)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-m", "eval"],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: scripts (-m scripts)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-m", "scripts"],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}