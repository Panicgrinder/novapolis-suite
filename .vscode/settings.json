{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.envFile": "${workspaceFolder}/novapolis_agent/.env",
  "python.testing.cwd": "${workspaceFolder}/novapolis_agent",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.analysis.typeCheckingMode": "standard",
  "github.copilot.chat.workspaceInstructions": "Prim채rdokument: .github/copilot-instructions.md. Erg채nzende Kerndokumente: novapolis-dev/docs/copilot-behavior.md, novapolis-dev/docs/index.md, novapolis-rp/database-raw/99-exports/README.md. Beziehe diese Dokumente als prim채ren Kontext bei Antworten. Wichtige Policy: Rohdaten bleiben in database-raw; keine ungefilterten Daten nach database-rp. Falls relevante Antworten zu RP/Datenfluss: pr체fe zuerst diese drei Dateien.",
  "github.copilot.chat.codebase": {
    "enabled": true
  },
  "task.allowAutomaticTasks": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": true,
  "remote.autoForwardPorts": true,
  "remote.autoForwardPortsSource": "hybrid",
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true
  ,
  "terminal.integrated.cwd": "${workspaceFolder}",
  // Ensure tasks/automation use the same shell profile deterministically
  "terminal.integrated.profiles.windows": {
    "PowerShell 7": {
      "path": "C:/Program Files/PowerShell/7/pwsh.exe",
      "args": ["-NoProfile"],
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell 7",
  "terminal.integrated.automationProfile.windows": {
    "path": "C:/Program Files/PowerShell/7/pwsh.exe",
    "args": ["-NoProfile"]
  },
  // Reuse the task terminal on rerun (no new terminals)
  "task.terminal.reuseOnRerun": true,
  // Godot editor path migrated from .code-workspace to root settings
  "godotTools.editorPath.godot4": "${workspaceFolder}\\novapolis-sim\\Godot_v4.5.1-stable_win64.exe"
}
