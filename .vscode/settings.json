{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.envFile": "${workspaceFolder}/novapolis_agent/.env",
  "python.testing.cwd": "${workspaceFolder}/novapolis_agent",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.analysis.typeCheckingMode": "standard",
  "github.copilot.chat.workspaceInstructions": "Kontext-Kerndokumente: novapolis-dev/docs/copilot-behavior.md, novapolis-dev/docs/index.md, database-raw/99-exports/README.md. Beziehe diese Dokumente als primären Kontext bei Antworten. Wichtige Policy: Rohdaten bleiben in database-raw; keine ungefilterten Daten nach database-rp. Falls relevante Antworten zu RP/Datenfluss: prüfe zuerst diese drei Dateien.",
  "github.copilot.chat.codebase": {
    "enabled": true
  },
  "task.allowAutomaticTasks": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": true,
  "remote.autoForwardPorts": true,
  "remote.autoForwardPortsSource": "hybrid",
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true
  ,
  // Ensure tasks/automation use the same shell profile deterministically
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.automationProfile.windows": {
    "path": "C:/Windows/System32/WindowsPowerShell/v1.0/powershell.exe",
    "args": ["-NoProfile"]
  },
  // Reuse the task terminal on rerun (no new terminals)
  "task.terminal.reuseOnRerun": true,
  // Godot editor path migrated from .code-workspace to root settings
  "godotTools.editorPath.godot3": "f:\\Downloads\\Godot_v4.5.1-stable_win64.exe\\Godot_v4.5.1-stable_win64.exe"
}
